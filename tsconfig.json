{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/ioc/*": ["src/common/ioc/*"],
      "@/src/*": ["src/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["reflect-metadata", "node", "jest", "jest-extended", "jest-chain"],
    "typeRoots": ["node_modules/@types", "src/@types", "src/common/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": ["src/common/@types/graphql.d.ts"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.ts", "_tests_"]
}
